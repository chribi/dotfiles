# In .gitconfig
# ```
# [include]
# 	path = /path/to/dotfiles/gitconfig
# ```
[core]
	autocrlf = input
	editor = nvim
	pager = delta
	longpaths = true
[pull]
	rebase = true
[merge]
	log = false
	conflictstyle =diff3
[diff]
	algorithm = histogram
	colorMoved = default
[rerere]
	enabled = true
[tag]
	sort = -taggerdate
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	hyperlinks = true
	light = true
[alias]
	co = checkout --recurse-submodules
	cb = checkout -b
	st = status
	pushf = push --force-with-lease
	pushu = push origin -u HEAD
	logg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(green)%cr %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 -s | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
	show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
